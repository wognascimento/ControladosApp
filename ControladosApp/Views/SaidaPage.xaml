<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControladosApp.Views.SaidaPage"
             Title="Saída de Itens">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Número da Requisição:" />

        <Entry x:Name="numeroEntry"
               Placeholder="Digite o número"
               Keyboard="Numeric"
               TextChanged="OnNumeroChanged" />

        <Button x:Name="scanButton"
                Text="Capturar QR Code"
                IsEnabled="False"
                Clicked="OnScanClicked" />

        <!--<Button Text="Enviar para API"
                Clicked="OnEnviarClicked" />-->

    </VerticalStackLayout>

</ContentPage>